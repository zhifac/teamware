<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">
  <bean id="placeholderConfig"
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="/WEB-INF/gate-service.properties" />
    <property name="properties">
      <props>
        <prop key="gleam.gateservice.top.dir">/WEB-INF</prop>
      </props>
    </property>
    <!-- set a sensible ordering parameter to allow specific instances to place
    other configurers either before or after this one -->
    <property name="order" value="1000" />
  </bean>
</beans>
